server s1 -listen :9080 -repeat 2 {
	rxreq
	expect req.url == "/"
	txresp -hdr "Foobar: barf" -body "0123456789"
}

server s1 -start 

client c1 -connect localhost:9080 {
	txreq 
	rxresp
	expect resp.status == 200
	expect resp.length == 10
}

client c1 -run

client c1 -run

server s1 -wait
